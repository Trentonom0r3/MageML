{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "description": "Target Windows with the Visual Studio development environment.",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "D:/dev/c++/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "VCPKG_ROOT": "D:/dev/c++/vcpkg",
        "Torch_DIR": "D:/dev/C++/Libraries/libtorch-cuda/libtorch/share/cmake/Torch",
        "Python3_ROOT_DIR": "C:/Program Files/Python313",
        "Python3_EXECUTABLE": "C:/Program Files/Python313/python.exe",
        "PYTORCH_PYTHON_LIB_DIR": "C:/Program Files/Python313/Lib/site-packages/torch/lib"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug-cpu",
      "displayName": "x64 Debug CPU-only",
      "description": "Target Windows (64-bit) CPU-only build. (Debug)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_CUDA": "OFF"
      }
    },
    {
      "name": "x64-release-cpu",
      "displayName": "x64 Release CPU-only",
      "description": "Target Windows (64-bit) CPU-only build. (Release)",
      "inherits": "x64-debug-cpu",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-debug-cuda",
      "displayName": "x64 Debug CUDA",
      "description": "Target Windows (64-bit) with CUDA support. (Debug)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_CUDA": "ON"
      }
    }
  ]
}
